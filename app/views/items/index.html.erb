<div class="box box-primary">
<div class="page-header">
  <%= link_to new_item_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    Add Item

  <% end %>
  <h1>List of Items</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover" id="example1">
    <thead>
      <tr>
            <th>Item name</th>
            <th>Description</th>
            <th>Barcode</th>
            <th>Cost Price</th>
            <th>Retail Price</th>
            <th>Date Delivered</th>
            <th>Date of Expiry</th>
            <th>Quantity</th>
            <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @items) do |item| %>
            <td><%= item.item_name %></td>
            <td><%= item.description %></td>
            <td><%= item.barcode %></td>
            <td><%= item.cost_price %></td>
            <td><%= item.retail_price %></td>
            <td><%= item.date_delivered %></td>
            <td><%= item.date_of_expiry %></td>
            <td><%= item.quantity %></td>
            <td><%= link_to 'Show', item %> |
        <%= link_to 'Edit', edit_item_path(item) %> |
        <%= link_to 'Delete', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
</div>
