<%= form_for(@sale, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @sale.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@sale.errors.count, "error") %> prohibited this sale from being saved:</h4>

      <ul>
      <% @sale.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :customer_name, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :customer_name, class: "form-control input-sm" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :item_name, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <input type="text" value="" class="form-control input-sm " readonly="">
    </div>
  </div>
  <div class="form-group">
    <!--<%= f.label :description, class: "col-sm-2 control-label" %>-->
    <div class="col-sm-10">
      <input type="hidden" value="" class="form-control input-sm " readonly="">
    </div>
  </div>
  <div class="form-group">
    <%= f.label :barcode, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <input type="text" value="" class="form-control input-sm " readonly="">
    </div>
  </div>
  <div class="form-group">
    <!--<%= f.label :cost_price, class: "col-sm-2 control-label" %>-->
    <div class="col-sm-10">
      <input type="hidden" value="" class="form-control input-sm" readonly="">
    </div>
  </div>
  <div class="form-group">
    <%= f.label :retail_price, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <input type="text" value="" class="form-control input-sm" readonly="">
    </div>
  </div>
  <div class="form-group">
    <!--<%= f.label :date_delivered, class: "col-sm-2 control-label" %>-->
    <div class="col-sm-10">
      <input type="hidden" value="" class="form-control input-sm" readonly="">
    </div>
  </div>
  <div class="form-group">
    <!--<%= f.label :date_of_expiry, class: "col-sm-2 control-label" %>-->
    <div class="col-sm-10">
      <input type="hidden" value="" class="form-control input-sm " readonly="">
    </div>
  </div>
  <div class="form-group">
    <%= f.label :quantity, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <input type="text" value="" class="form-control input-sm">
    </div>
  </div>
  <div class="form-group">
    <%= f.label :sales_person, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <input type="text" value="<%=current_user.email%>" class="form-control input-sm" readonly>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :date_sold, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <input type="text" value="<%= Time.now %>" class="form-control input-sm" readonly>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
